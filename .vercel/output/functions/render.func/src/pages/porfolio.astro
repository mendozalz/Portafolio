    <Portafolio url="https://mendozalz-metaverse.vercel.app/" title="Metaverse" description="Experimentado en la creación de mi propio metaverso..." imagen="https://raw.githubusercontent.com/mendozalz/metaverse/main/public/Mendozalz%20Metaverse.gif" tecnologias={["Next.js", "Three.js"]}/>

    <Portafolio url="https://mlz-freefire.netlify.app/" title="Free Fire Card" description="Web Component en JS Vanilla de uso multiporposito alusivo a Free Fire..." imagen="https://i.ibb.co/DVdq6ck/Free-Fire-Card.gif" tecnologias={["Web Component"]}/>

    <Portafolio url="https://astro-tips.netlify.app/" title="Astro Build Tips" description="Proyecto del curso de Astro..." imagen="https://i.ibb.co/nLxt0M9/astrobuild-tips.png" tecnologias={["Astro", "Tailwind", "JS"]}/>

