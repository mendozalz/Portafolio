    <Portafolio url="https://gc-meet.netlify.app/" title="Angular Meet" description="Desarrollo Front end para un meet personalizado..." imagen="https://raw.githubusercontent.com/mendozalz/GCMeet-Angular/main/src/img/GCMeetAngular.gif" tecnologias={["Angular 16", "Tailwind"]}/>

    <Portafolio url="https://www.youtube.com/playlist?list=PLn1pn3Ll0pEGIDU7GOf_76xHXTWzxrf9T" title="Portafolio video Wordpress" description="Ya que es muy dificil exponer de manera directa mis trabajos anteriores dejo en esta card un enlace a videos donde muestran mi autoria..." imagen="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/WordPress_blue_logo.svg/800px-WordPress_blue_logo.svg.png" tecnologias={["Wordpress"]}/>

    <Portafolio url="https://halo-infinity.vercel.app/" title="Halo Infinity" description="Practicas en HTML, CSS y JS con cambio entre light mode y dark mode..." imagen="https://cdn.hobbyconsolas.com/sites/navi.axelspringer.es/public/media/image/2020/07/halo-infinite-2005379.jpg?tf=3840x" tecnologias={["HTML", "CSS", "JS"]}/>

    <Portafolio url="https://travel-tailwind.netlify.app/" title="Mendozalz Travel" description="Final de proyecto en Tailwind con cambio entre light mode y dark mode..." imagen="https://raw.githubusercontent.com/mendozalz/Travel-Tailwind/main/public/Tailwind.png" tecnologias={["HTML", "Tailwind"]}/>
  </Scroll>
