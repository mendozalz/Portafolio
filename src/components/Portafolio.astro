---

interface Props{
  url:string
  title:string
  description: string
  imagen:string
  tecnologias:string[]

}

const {url,title, description, imagen, tecnologias} = Astro.props

---

<div
class="flex relative shadow-box-up dark:shadow-buttons-box-dark rounded-lg p-3 mb-3"
>
<a class="absolute w-full h-full left-0" target="_black" href={url}></a>
<img
  class="lg:flex lg:w-15 lg:h-15 2xl:w-25 2xl:h-25 object-cover rounded-full mr-4"
  src={imagen}
  alt="img"
/>
<div class="flex flex-col">
  <h1 class="text-xxs 2xl:text-xs items-baseline font-bold capitalize text-light-blue-dark dark:text-dark-blue-light">
    {title}
  </h1>
  <p class="text-light-blue-dark dark:text-dark-blue-light">{description}</p>
  <ul class="flex my-auto">
        {tecnologias.map(e=>{
         return (<li class="text-4xs lg:text-3xs font-medium text-light-blue-dark dark:text-dark-blue-light py-1 px-2 mr-1 my-1 rounded-lg last-of-type:mr-0 shadow-box-up dark:shadow-buttons-box-dark bg-gradient-box-light h-min w-fit dark:bg-gradient-box-dark border border-light-blue-dark dark:border-light-blue-light">
          {e}
        </li>)
        })}
  </ul>

  <p class="text-xxs font-thin text-light-blue-dark dark:text-dark-blue-light mt-auto">
  </p>
</div>
</div>